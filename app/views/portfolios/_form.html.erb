<%= form_for(portfolio_item) do |form| %>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :subtitle %>
        <%= form.text_field :subtitle, class: "form-control" %>
      </div>
    </div>

    <div class="col-md-6">
      <div class="form-group">
      <%= form.label :body %>
      <%= form.text_area :body, class: "form-control", rows: 4.5  %>
      </div>
    </div>
  </div>

  <hr>
  <h3>Technologies Used</h3>

  <div class="form-group">
    <%= form.fields_for :technologies do |technology_form| %>
      <div><%= technology_form.label :technologies %>
        
        <%= technology_form.text_field :name, class: "form-control"  %>

      </div>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.submit "Create", class: "btn btn-primary btn-block" %>
  </div>

<% end %>